{
  "name": "simple-bonds",
  "version": "1.0.0",
  "browserslist": [
    ">0.25%"
  ],
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*,*.html}",
    "scss": "node-sass --output-style compressed --source-map true -o dist/css src/scss",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/**/*.css",
    "babel": "babel src/js/scripts.js -d dist/js",
    "uglify-dist-js": "terser dist/js/scripts.js -o dist/js/scripts.js -c -m",
    "html": "del-cli dist/*html && html-minifier --collapse-whitespace --input-dir src --output-dir dist --file-ext html",
    "images": "imagemin-dir src/images dist/images",
    "server": "browser-sync start --server dist --files 'dist/css/**/*.css, !dist/css/**/*.map, dist/js/**/*.js', dist/index.html",
    "build:css": "run-s scss autoprefixer",
    "build": "run-s clean build:css babel uglify-dist-js images html",
    "watch:css": "onchange 'src/scss/**/*.scss' -- run-s build:css",
    "watch:js": "onchange 'src/js/**/*.js' -- run-s babel uglify-dist-js",
    "watch:images": "onchange 'src/images' -- run-s images",
    "watch:html": "onchange 'src/*.html' -- run-s html",
    "watch": "run-p server watch:*"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.4",
    "@babel/core": "^7.7.4",
    "@babel/plugin-transform-template-literals": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "autoprefixer": "^9.7.2",
    "babel-preset-env": "^1.7.0",
    "browser-sync": "^2.11.1",
    "del-cli": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "html-minifier": "^4.0.0",
    "imagemin-cli": "^5.0.0",
    "imagemin-cli-preserve-dir-structure": "0.0.2",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "shelljs": "^0.8.3",
    "stylelint": "^12.0.1",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-prettier": "^1.1.2",
    "terser": "^4.4.0"
  }
}
